{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 350,
  "title": {
    "text": "The Growth of Aquaculture Driven by China's Demand (Values per Capita)",
    "fontSize": 22,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#333",
    "dy": -10
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/pre-processed_data/consumption_production_filtered.csv"
  },
  "transform": [
    {
      "filter": "datum.Entity == 'China'"
    },
    {
      "fold": [
        "Fisheries_production_per_capita_kg",
        "consumption_per_capita_kg",
        "Aquaculture_production_per_capita_kg"
      ],
      "as": ["Category", "Value"]
    },
    {
      "calculate": "datum.Category === 'Fisheries_production_per_capita_kg' ? 'Fisheries Production' : datum.Category === 'consumption_per_capita_kg' ? 'Consumption' : 'Aquaculture Production'",
      "as": "CategoryLabel"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "opacity": 0.3,
        "color": "#023E8A"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "title": "Year",
            "format": "%Y"
          }
        },
        "y": {
          "field": "Fisheries_production_per_capita_kg",
          "type": "quantitative",
          "axis": {"title": "Production and Consumption (kg per capita)"}
        },
        "y2": {
          "field": "consumption_per_capita_kg"
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
          {"field": "consumption_per_capita_kg", "type": "quantitative", "title": "Consumption (kg per capita)"},
          {"field": "Fisheries_production_per_capita_kg", "type": "quantitative", "title": "Fisheries Production (kg per capita)"},
          {"field": "Aquaculture_production_per_capita_kg", "type": "quantitative", "title": "Aquaculture Production (kg per capita)"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 4
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal"
        },
        "y": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "field": "CategoryLabel",
          "type": "nominal",
          "scale": {
            "domain": [
              "Consumption",
              "Fisheries Production",
              "Aquaculture Production"
            ],
            "range": ["#F58E20", "#8D6E63", "#C30010"]
          },
          "legend": {
            "title": "Fish and Seafood (Per Capita)"
          }
        },
        "strokeDash": {
          "condition": {
            "test": "datum.CategoryLabel === 'Aquaculture Production'",
            "value": [4, 4]
          },
          "value": [1, 0]
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
          {"field": "Value", "type": "quantitative", "title": {"field": "CategoryLabel"}}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 5, 
        "dy": 10
        },
        "encoding": {
          "text": {
            "value": "Fish consumption exceeds fisheries production,"
          },
          "x": {"value": 700},
          "y": {"value": 210},
          "color": {"value": "black"}
        }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 6, 
        "dy": 5
        },
        "encoding": {
          "text": {
            "value": "creating unmet demand for additional supply."
          },
          "x": {"value": 700},
          "y": {"value": 228},
          "color": {"value": "black"}
        }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 6, 
        "dy": 5
        },
        "encoding": {
          "text": {
            "value": "Aquaculture expands rapidly, filling the gap as fish"
          },
          "x": {"value": 680},
          "y": {"value": 20},
          "color": {"value": "#C30010"}
        }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 6, 
        "dy": 5
        },
        "encoding": {
          "text": {
            "value": "consumption exceeds fisheries production.",
          },
          "x": {"value": 680},
          "y": {"value": 35},
          "color": {"value": "#C30010"}
        }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 6, 
        "dy": 5
        },
        "encoding": {
          "text": {
            "value": "During this period, aquaculture was not active as the",
          },
          "x": {"value": 92},
          "y": {"value": 275},
          "color": {"value": "#C30010"}
        }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "fontWeight": 300,
        "font": "sans-serif",
        "dx": 6, 
        "dy": 5
        },
        "encoding": {
          "text": {
            "value": "gap was small, indicating stable supply and demand.",
          },
          "x": {"value": 92},
          "y": {"value": 290},
          "color": {"value": "#C30010"}
        }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "titleFontSize": 14,
      "labelFontSize": 12
    }
  }
}
