{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Overfishing per Capita (2000-2020) (kg)",
    "fontSize": 22,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#333",
    "dy": -10
  },
  "width": 950,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'No data available for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country Name in Map"
          },
          {"field": "note", "type": "nominal"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#cfe2f3"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {"calculate": "toString(Year_selection)", "as": "yearstring"},
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://firebasestorage.googleapis.com/v0/b/test-7bbdd.appspot.com/o/dropper%2Ffiles%2Fgallery%2Foverfishing_by_year.csv?alt=media&token=812b2ddc-18e2-48e3-b9cd-2cccae8dfff4",
              "format": {"type": "csv"}
            },
            "key": "Entity",
            "fields": [
              "2000",
              "2001",
              "2002",
              "2003",
              "2004",
              "2005",
              "2006",
              "2007",
              "2008",
              "2009",
              "2010",
              "2011",
              "2012",
              "2013",
              "2014",
              "2015",
              "2016",
              "2017",
              "2018",
              "2019",
              "2020"
            ]
          }
        },
        {
          "calculate": "datum[Year_selection]",
          "as": "overfishing_per_capita_kg"
        },
        {
          "calculate": "datum.overfishing_per_capita_kg",
          "as": "Overfishing per Capita (kg)"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Overfishing per Capita (kg)",
          "type": "quantitative",
          "title": "Overfishing per Capita (kg)",
          "scale": {
            "type": "threshold",
            "domain": [-3, 1, 5, 10],
            "range": ["#f7d9c4", "#f4a582", "#d6604d", "#b2182b", "#67001f"]
          },
          "legend": {"orient": "right"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Overfishing per Capita (kg)",
            "type": "quantitative",
            "title": "Overfishing per Capita (kg)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Malaysia'"},
        {
          "calculate": "split('Malaysia has consistently remained in a safer\\nrange, with no significant overfishing issues.', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "150", "as": "longitude"},
        {"calculate": "-95", "as": "latitude"}
      ],
      "mark": {
        "type": "text",
        "dx": -60,
        "dy": -80,
        "color": "black",
        "fontSize": 10
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Malaysia'"},
        {"calculate": "103", "as": "longitude"},
        {"calculate": "4", "as": "latitude"},
        {"calculate": "70", "as": "longitude2"},
        {"calculate": "-38", "as": "latitude2"}
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Canada'"},
        {
          "calculate": "split('Overfishing in Canada has significantly \\n decreased, showing steady improvement.', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "-170", "as": "longitude"},
        {"calculate": "0", "as": "latitude"}
      ],
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": -100,
        "color": "black",
        "fontSize": 10
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Russia'"},
        {"calculate": "-110", "as": "longitude"},
        {"calculate": "125", "as": "latitude"},
        {"calculate": "-160", "as": "longitude2"},
        {"calculate": "36", "as": "latitude2"}
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Russia'"},
        {
          "calculate": "split('Overfishing in Russia has steadily \\nincreased over the years.', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "150", "as": "longitude"},
        {"calculate": "5", "as": "latitude"}
      ],
      "mark": {
        "type": "text",
        "dx": 40,
        "dy": -100,
        "color": "black",
        "fontSize": 10
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Canada'"},
        {"calculate": "130", "as": "longitude"},
        {"calculate": "120", "as": "latitude"},
        {"calculate": "160", "as": "longitude2"},
        {"calculate": "42", "as": "latitude2"}
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    }
  ],
  "config": {}
}