{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 150,
  "data": {
    "url": "https://raw.githubusercontent.com/Park-Darin/FIT3179_A2/refs/heads/main/pre-processed_data/filtered_aquaculture_above_mean_2020.csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "text", "tooltip": true},
  "encoding": {
    "text": {"field": "Entity", "type": "nominal"},
    "size": {
      "field": "Aquaculture_production",
      "type": "quantitative",
      "title": "Aquaculture Production (tons)",
      "scale": {"range": [10, 80]},
      "legend": null
    },
    "color": {
      "condition": {
        "test": "indexof(['China', 'Indonesia', 'India', 'Vietnam', 'Bangladesh'], datum.Entity) >= 0",
        "value": "#023E8A"
      },
      "field": "Entity",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "set2"}
    },
    "x": {"field": "x_position", "type": "quantitative", "axis": null},
    "y": {"field": "y_position", "type": "quantitative", "axis": null},
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {
        "field": "Aquaculture_production",
        "type": "quantitative",
        "title": "Aquaculture Production (tons)",
        "format": ","
      }
    ]
  },
  "config": {
    "view": {"stroke": null},
    "text": {
      "font": "sans-serif",
      "fontSize": 12,
      "fill": "black",
      "fontWeight": "bold"
    },
    "axis": {"grid": false, "domain": false, "ticks": false, "labels": false}
  }
}